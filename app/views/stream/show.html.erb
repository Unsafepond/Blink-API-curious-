<div class="med-left-margin small-top-margin">
<h4><%= link_to @stream_name, channel_path(@stream_name) %></h4>
  <iframe 
      src="http://player.twitch.tv/?channel=<%= @stream_name %>" 
      height="720" 
      width="1280" 
      frameborder="0" 
      scrolling="no" 
      allowfullscreen>
  </iframe>
  <iframe frameborder="0" 
        scrolling="no" 
        id="chat_embed" 
        src="http://www.twitch.tv/<%= @stream_name %>/chat" 
        height="720" 
        width="325">
  </iframe>
</div>