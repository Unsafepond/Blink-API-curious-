<div class="container small-top-margin">
  <div class="row">
    <% @streams.each do |stream| %>
      <div class="col s4 m4">
        <div class="card">
          <div class="card-image exo">
            <%= link_to image_tag(stream.preview_url), stream_path(stream_name: parse_name(stream.name))%>
            <span class="card-title"><i class="small material-icons med-left-margin">input</i></span>
          </div>
          <div class="card-content">
            <span class="card-title"><%= link_to parse_name(stream.name), channel_path(channel_name: parse_name(stream.name)) %></span>
            <h6><i class="small material-icons med-left-margin">perm_identity</i><%= stream.viewer_count%></h6>
            <p><i class="small material-icons med-left-margin">play_arrow</i><%= stream.game_name %></p>
          </div>
        </div>
      </div>
    <% end%>
  </div>
</div>